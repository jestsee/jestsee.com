---
import Keyboard from '@/components/Keyboard.astro'
import GradientText from '@/components/ui/GradientText'
import BaseLayout from '@/layouts/BaseLayout.astro'
---

<BaseLayout>
  <!-- <div
    class='absolute left-1/2 top-0 aspect-square w-1/4 -translate-x-3/4 -translate-y-1/4 rounded-full bg-indigo-400 blur-[200px]'
  >
  </div> -->
  <div class='flex flex-col items-center text-center'>
    <GradientText />
    <h1
      class='mt-8 bg-gradient-to-b from-white to-zinc-400 bg-clip-text text-[clamp(2.5rem,8vw,4.5rem)] font-medium leading-none tracking-tighter text-transparent'
    >
      Hi, I'm Jesica
      <br />
      A professional typer.
    </h1>
    <p class='mt-8 max-w-lg tracking-wide text-zinc-400 max-md:text-sm'>
      I don't just press keys&mdash;I build. With every keystroke,<br
        class='max-md:hidden'
      /> I'm
      <span class='text-zinc-200'> turning concepts into reality, </span>
      crafting innovative solutions and bringing ideas to life.
    </p>
    <div class='mt-12'>
      <p
        class='mb-4 text-xs uppercase tracking-widest text-zinc-600 max-md:text-[10px]'
      >
        press any of the keys below
      </p>
      <Keyboard />
    </div>
  </div>

  <main class='mt-[800px]'>
    <p>Next section</p>
  </main>
  <!-- footer -->
</BaseLayout>
