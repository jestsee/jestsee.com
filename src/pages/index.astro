---
import Keyboard from '@components/Keyboard.astro'
import BaseLayout from '@layouts/BaseLayout.astro'
---

<BaseLayout>
  <div class='flex flex-col items-center text-center'>
    <!-- TODO: remove this div later -->
    <div class='text-[clamp(2rem,8vw,4rem)] leading-none'>
      <h1 class='font-semibold'>
        Hi, I'm Jesica
        <br />
        A professional typer.
      </h1>
    </div>
    <p class='mt-4 max-w-lg tracking-wide text-zinc-300 max-md:text-sm'>
      I don't just press keys&mdash;I build. Turning concepts into reality,
      crafting solutions with every keystroke.
    </p>
    <div class='mt-6'>
      <Keyboard />
    </div>
    <div class='mt-16 flex gap-4'>
      <a class='rounded bg-white px-6 py-2 text-zinc-950 max-[400px]:text-sm'>
        <span class='font-medium'>See my works</span>
      </a>
      <a
        class='rounded border border-white bg-zinc-900 px-6 py-2 max-[400px]:text-sm'
      >
        <span>Contact me</span>
      </a>
    </div>
  </div>

  <main class='mt-[800px]'>
    <p>Next section</p>
  </main>
  <!-- footer -->
</BaseLayout>
