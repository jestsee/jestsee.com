---
import Keyboard from '../components/3d/Keyboard'
import BaseLayout from '../layouts/BaseLayout.astro'
---

<BaseLayout>
  <header class='flex flex-col gap-16'>
    <div class='flex flex-col gap-6'>
      <div
        class='font-heading text-[clamp(3rem,5vw,4.5rem)] font-medium leading-none'
      >
        <h1>Hi, I'm <i>Jesica.</i></h1>
        <h2>A <i>professional</i> typer.</h2>
      </div>
      <p class='max-w-lg text-zinc-400 md:text-lg'>
        I don't just press keys&mdash;I build. Transforming ideas into reality,
        one keystroke at a time. Let's team up to
        <span class='text-white underline'>bring ideas to life.</span>
      </p>
    </div>
    <div class='flex gap-4'>
      <a class='rounded bg-white px-6 py-2 text-zinc-950'>
        <span class='font-medium'>See my works</span>
      </a>
      <a class='rounded border border-white px-6 py-2'>
        <span>Contact me</span>
      </a>
    </div>
  </header>
  <main class='mt-[800px]'>
    <p>Next section</p>
  </main>
  <!-- footer -->
</BaseLayout>
