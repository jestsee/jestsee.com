---
import type { HTMLAttributes } from 'astro/types'

interface Props extends HTMLAttributes<'svg'> {
  size?: number
}

const { size = 32, color = 'white', ...restProps } = Astro.props
---

<svg
  width={size}
  height={size}
  viewBox='0 0 32 32'
  fill='none'
  xmlns='http://www.w3.org/2000/svg'
  {...restProps}
>
  <path
    d='M4 28L14.064 17.936M14.064 17.936L4 4H10.6667L17.936 14.064M14.064 17.936L21.3333 28H28L17.936 14.064M28 4L17.936 14.064'
    stroke={color}
    stroke-width={restProps['stroke-width'] ?? '2.25'}
    stroke-linecap='round'
    stroke-linejoin='round'></path>
</svg>
