---
import '@fontsource-variable/dm-sans'
import '@fontsource/instrument-serif'
import BaseHead from '@/components/BaseHead.astro'
import BottomNavigationBar from '@/components/BottomNavigationBar'
import { ViewTransitions } from 'astro:transitions'
import RayLight from '@/components/RayLight'
import { cn } from '@/lib/utils'
---

<!doctype html>
<html lang='en' class='dark'>
  <head>
    <BaseHead title='Jesica' description='description' />
    <ViewTransitions />
  </head>
  <body class='bg-zinc-950 text-white'>
    <div class='relative flex flex-col items-center overflow-x-hidden'>
      <div
        class='w-full px-12 pb-32 transition-all max-sm:px-4 custom:w-[1120px]'
      >
        <RayLight
          className={cn(
            'opacity-50',
            'max-xs:-left-36 max-xs:-top-40 max-xs:opacity-45'
          )}
        />
        <RayLight className='-top-32 left-[45%]' />
        <RayLight className='left-[45%] top-[5%] h-[180px] max-xs:hidden' />
        <slot />
      </div>
    </div>
    <BottomNavigationBar client:load transition:persist='navbar' />
  </body><!-- TODO: footer -->
</html>
